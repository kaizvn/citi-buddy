// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Utility {
  id         Int       @id @default(autoincrement())
  type       String
  unit       String
  icon       String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  dataLogs   DataLog[]
}

model DataLog {
  id         Int      @id @default(autoincrement())
  type_id    Int
  utility    Utility  @relation(fields: [type_id], references: [id])
  amount     Float
  source     String
  date       String
  created_at DateTime @default(now())
}
