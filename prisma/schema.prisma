// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model City {
  id          Int       @id @default(autoincrement())
  name        String
  code        String
  countryCode String
  phoneCode   Int
  population  Int
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  DataLog     DataLog[]
}

model Utility {
  id         Int       @id @default(autoincrement())
  type       String
  unit       String
  icon       String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  dataLogs   DataLog[]
}

model DataLog {
  id         Int      @id @default(autoincrement())
  type_id    Int
  utility    Utility  @relation(fields: [type_id], references: [id])
  amount     Float
  source     String
  date       String
  city_id    Int      @default(1)
  city       City     @relation(fields: [city_id], references: [id])
  created_at DateTime @default(now())
}
